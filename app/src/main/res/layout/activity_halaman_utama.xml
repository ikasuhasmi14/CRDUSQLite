<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanUtamaActivity">


    <Button
        android:id="@+id/buttonmhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Mahasiswa" />

    <Button
        android:id="@+id/buttonruangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonmhs"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="74dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Ruangan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="-32dp"
        android:layout_toStartOf="@+id/buttonruangan"
        android:text="Pilih Menu"
        android:textSize="24sp" />
</RelativeLayout>